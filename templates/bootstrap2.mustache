{{!
    @template filter_tabs/bootstrap2

    Template to display tabs using Bootstrap 2.

    Classes required for JS:
    * 'filter-tabs-bootstrap' - to identify tabs as one of ours.

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "tabgroupcounter": "1",
        "tabs": [ { "title": "header", "content": "body", "key": 1, "active": "active" } ]
    }
}}
<div id="filter-tabs-tabgroup-{{tabgroupcounter}}" class="filter-tabs-bootstrap">
    <ul id="filter-tabs-titlegroup-{{tabgroupcounter}}" class="nav nav-tabs">
        {{#tabs}}
            <li class="{{get_active}}">
                <a href="#filter-tabs-content-{{tabgroupcounter}}-{{get_key}}" data-toggle="tab">{{get_title}}</a>
            </li>
        {{/tabs}}
    </ul>
    <div id="filter-tabs-content-{{tabgroupcounter}}" class="tab-content">
        {{#tabs}}
            <div id="filter-tabs-content-{{tabgroupcounter}}-{{get_key}}" class="tab-pane {{get_active}}">
                {{{get_content}}}
            </div>
        {{/tabs}}
    </div>
</div>
